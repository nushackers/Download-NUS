<% include header %>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="panel">
            <form action="/login" method="post">
                <fieldset>
                    <legend>Sign In</legend>
                	<% for (var i=0; i<messages.length; i++){ %>
                		<div class="alert alert-error">
                			<%= messages[i] %>
                		</div>
                	<% } %>
                    <div class="form-group row">
                        <div class="col-lg-4 col-sm-4">
                            <label for="domain">Domain</label>
                            <select class="form-control" id="domain" name="domain">
                                <option value="nusstu">NUSSTU</option>
                                <option value="nusstf">NUSSTF</option>
                                <option value="nusext">NUSEXT</option>
                            </select>
                        </div>
                        <div class="col-lg-8 col-sm-8">
                            <label for="nusId">NUSNET ID</label>
                            <input type="text" class="form-control" id="nusId" name="username" placeholder="A0XXXXXX" name="nusId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12 col-sm-12">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12 col-sm-12">
                                <button type="submit" class="btn btn-default pull-right">Sign In</button>
                        </div>
                    </div>
                </fieldset>
            </form> 
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>
<% include footer %>
